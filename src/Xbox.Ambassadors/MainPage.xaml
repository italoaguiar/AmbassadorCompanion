                    <PivotItem>
                        <PivotItem.Header>
                            <Grid Width="106" ToolTipService.ToolTip="Toolbox">
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC7A;"/>
                            </Grid>
                        </PivotItem.Header>
                        <views:SidebarToolbox/>
                    </PivotItem>
                </Pivot>
            </Grid>

        </Grid>
    </Grid>
</Page>
